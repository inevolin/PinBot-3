<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pinbot3.AccountController">
    <children>
        
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="110.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="100" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40" minHeight="40" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40" minHeight="40" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40" minHeight="40" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40" minHeight="40" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40" minHeight="40" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40" minHeight="40" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Email:  " GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="txtEmail" maxWidth="220" GridPane.columnIndex="2" GridPane.rowIndex="2" />
             
                <Label text="Password:  " GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="txtPassword" maxWidth="220" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                
                <CheckBox fx:id="chkProxy" minHeight="20" minWidth="100" onAction="#chkProxy_Click" text="Use proxy?" GridPane.columnIndex="2" GridPane.rowIndex="4" /> 
             
                <Label text="Proxy IP:  " GridPane.columnIndex="3" GridPane.rowIndex="2" />
                <TextField fx:id="txtIP" maxWidth="180" GridPane.columnIndex="4" GridPane.rowIndex="2" />
             
                <Label text="(User:)  " GridPane.columnIndex="3" GridPane.rowIndex="3" />
                <TextField fx:id="txtProxyUser" maxWidth="180" GridPane.columnIndex="4" GridPane.rowIndex="3" />
             
                <Label text="(Pass:)  " GridPane.columnIndex="3" GridPane.rowIndex="4" />
                <TextField fx:id="txtProxyPass" maxWidth="180" GridPane.columnIndex="4" GridPane.rowIndex="4" />
                
                <Label fx:id="lblStatus" text="Status" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="6">
                    <GridPane.margin>
                        <Insets left="10.0" />
                    </GridPane.margin>
                </Label>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="5">
               <children>
                   
                      <Button fx:id="btnSave" minWidth="100" onAction="#btnSave_Click" text="Save" />
               </children>
            </HBox>
            </children>
        </GridPane>
            
       
            
        
    </children>
</AnchorPane>
